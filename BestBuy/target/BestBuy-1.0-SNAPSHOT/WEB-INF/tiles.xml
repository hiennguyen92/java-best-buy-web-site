<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
	       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
	       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <definition name="Page" template="/template.jsp">
        <put-attribute name="header" value="/pages/header.jsp" />
        <put-attribute name="sidebar" value="/pages/sidebar.jsp" />
        <put-attribute name="footer" value="/pages/footer.jsp" />
    </definition>
    <definition name="Home" extends="Page">
        <put-attribute name="slider" value="/pages/slider.jsp"/>
        <put-attribute name="body" value="/pages/index.jsp"/>    
    </definition>
    <definition name="Store" extends="Page">
        <put-attribute name="body" value="/pages/store.jsp"/>    
    </definition>
    <definition name="Info" extends="Page">
        <put-attribute name="body" value="/pages/single.jsp"/>    
    </definition>
    <definition name="Login" extends="Page">
        <put-attribute name="body" value="/pages/login.jsp"/>    
    </definition>
    <definition name="Register" extends="Page">
        <put-attribute name="body" value="/pages/register.jsp"/>    
    </definition>
</tiles-definitions>